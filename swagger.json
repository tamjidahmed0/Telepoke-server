{
  "openapi": "3.0.0",
  "paths": {
    "/api/users": {
      "post": {
        "operationId": "UserController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OTP sent to user email",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "msg": "Otp sent to your mail",
                    "code": 201,
                    "otp_length": 6,
                    "timer": 180,
                    "email": "user@gmail.com"
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "statusCode": 400,
                    "message": "User already exists",
                    "error": "Bad Request"
                  }
                }
              }
            }
          }
        },
        "summary": "Create new user and send OTP",
        "tags": [
          "users"
        ]
      }
    },
    "/api/users/verify/otp": {
      "post": {
        "operationId": "UserController_verifyOtp",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyOtpDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OTP verified successfully",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "msg": "Verified",
                    "access_token": "jwt.token.here",
                    "id": "64f1abc123"
                  }
                }
              }
            }
          },
          "400": {
            "description": "OTP expired or not matched",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "statusCode": 400,
                    "message": "OTP expired",
                    "error": "Bad Request"
                  }
                }
              }
            }
          }
        },
        "summary": "Verify OTP and create user",
        "tags": [
          "users"
        ]
      }
    },
    "/api/users/signin": {
      "post": {
        "operationId": "UserController_userLogin",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLoginDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "access_token": "jwt.token.here",
                    "id": "64f1abc123"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid email or password",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "statusCode": 401,
                    "message": "Email or password wrong",
                    "error": "Unauthorized"
                  }
                }
              }
            }
          }
        },
        "summary": "User login",
        "tags": [
          "users"
        ]
      }
    },
    "/api/conversation/{user_id}": {
      "get": {
        "operationId": "ConversationController_getConversation",
        "parameters": [
          {
            "name": "user_id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Conversation retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CreateConversationDto"
                  }
                }
              }
            }
          }
        },
        "summary": "Get conversation",
        "tags": [
          "Conversation"
        ]
      }
    },
    "/api/message/{conversation_id}/{user_id}": {
      "get": {
        "operationId": "MessageController_getMessages",
        "parameters": [
          {
            "name": "conversation_id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user_id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Messages retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CreateMessageDto"
                  }
                }
              }
            }
          }
        },
        "summary": "Get messages of a conversation",
        "tags": [
          "Message"
        ]
      }
    },
    "/api/notification/delivered": {
      "post": {
        "operationId": "NotificationController_markAsDelivered",
        "parameters": [],
        "responses": {
          "201": {
            "description": ""
          }
        },
        "tags": [
          "Notification"
        ]
      }
    }
  },
  "info": {
    "title": "Telepoke API",
    "description": "Backend API documentation for Telepoke messaging application",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Tamjid"
          },
          "email": {
            "type": "string",
            "example": "user@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          },
          "FCMtoken": {
            "type": "string",
            "example": "hsbfhdsfgyggfiwehfudhs"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "VerifyOtpDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@gmail.com"
          },
          "otp": {
            "type": "number",
            "example": 256422
          }
        },
        "required": [
          "email",
          "otp"
        ]
      },
      "UserLoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@gmail.com"
          },
          "password": {
            "type": "string",
            "example": "123456"
          },
          "FCMtoken": {
            "type": "string",
            "example": "hsbfhdsfgyggfiwehfudhs"
          }
        },
        "required": [
          "email",
          "password",
          "FCMtoken"
        ]
      },
      "CreateConversationDto": {
        "type": "object",
        "properties": {
          "conversationId": {
            "type": "string",
            "example": "6973716d12d3c768d7600a2a",
            "description": "Conversation ID"
          },
          "receiver_id": {
            "type": "string",
            "example": "69736f6512d3c768d7600a27",
            "description": "Other participant user ID"
          },
          "type": {
            "type": "string",
            "example": "direct",
            "enum": [
              "direct",
              "group"
            ],
            "description": "Conversation type"
          },
          "displayName": {
            "type": "string",
            "example": "jahid",
            "description": "Display name for conversation"
          },
          "displayImage": {
            "type": "string",
            "example": "https://cdn-icons-png.flaticon.com/512/149/149071.png",
            "nullable": true,
            "description": "Display image (optional)"
          },
          "lastMessageText": {
            "type": "string",
            "example": "eito valo...tor?",
            "nullable": true,
            "description": "Last message text"
          },
          "lastMessageAt": {
            "type": "string",
            "example": "2026-01-23T13:17:18.110Z",
            "description": "Last message time"
          },
          "unreadCount": {
            "type": "number",
            "example": 3,
            "description": "Unread message count for current user"
          }
        },
        "required": [
          "conversationId",
          "receiver_id",
          "type",
          "displayName",
          "lastMessageAt",
          "unreadCount"
        ]
      },
      "CreateMessageDto": {
        "type": "object",
        "properties": {
          "conversation_id": {
            "type": "string",
            "example": "64f1abc123"
          },
          "sender_id": {
            "type": "string",
            "example": "64f1abc456"
          },
          "receiver_id": {
            "type": "string",
            "example": "64f1abc789"
          },
          "messageType": {
            "type": "string",
            "example": "TEXT",
            "enum": [
              "TEXT",
              "IMAGE",
              "VIDEO"
            ]
          },
          "text": {
            "type": "string",
            "example": "Hello!",
            "nullable": true
          },
          "mediaUrl": {
            "type": "string",
            "example": null,
            "nullable": true
          },
          "replyTo": {
            "type": "string",
            "example": null,
            "nullable": true
          },
          "status": {
            "type": "string",
            "example": "seen",
            "enum": [
              "sent",
              "delivered",
              "seen"
            ]
          },
          "time": {
            "type": "string",
            "example": "2023-09-01T12:34:56.789Z"
          }
        },
        "required": [
          "conversation_id",
          "sender_id",
          "receiver_id",
          "messageType",
          "status",
          "time"
        ]
      }
    }
  }
}